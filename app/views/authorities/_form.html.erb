<%= form_with(model: @authority, local: true, data: { turbo: false }, url: authorities_path) do |form|%>

<div>
  <%= form.label :name %>
  <%= form.text_field :name %>
</div>

<div>
  <%= form.label :rank %>
  <%= form.text_field :rank %>
</div>

<div>
  <%= form.label :position %>
  <%= form.text_field :position %>
</div>

<div>
  <%= form.label :biography %>
  <%= form.rich_text_area :biography %>
</div>

<%= form.label :status %>

<%= form.label 1 %>
<%= form.radio_button :status, 1 %>

<%= form.label 2 %>
<%= form.radio_button :status, 2 %>

<%= form.label 3 %>
<%= form.radio_button :status, 3 %>
  

<%= form.submit%>

<% end %>