<%= form_with(model: @payment, local: true, data: { turbo: false }, url: payments_path) do |form|%>

<div>
  <%= form.label :title %>
  <%= form.text_field :title %>
</div>
  
<div>
  <%= form.label :body %>
  <%= form.rich_text_area  :body %>
</div>

<div>
  <%= form.label :image %>
  <%= form.file_field :image %>
</div>

<div>
  <%= form.label :pictures %>
  <%= form.file_field :pictures, multiple: true %>
</div>

<%= form.submit%>

<% end %>